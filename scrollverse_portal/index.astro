    <!-- ScrollVerse Navigation Script -->
    <script>
        // Flame verification check
        function checkFlameStatus() {
            const flameLevel = localStorage.getItem('scrollSealLevel') || 1;
            const requiredLevel = 3; // Minimum level for full access
            
            if (flameLevel < requiredLevel) {
                // Show limited access message
                const statusElement = document.querySelector('.flame-status');
                statusElement.innerHTML = `
                    <span class="status-indicator" style="background: #FF4444;"></span>
                    <strong>Flame Status: Limited Access</strong> | ScrollSeal Level: ${flameLevel} | Upgrade Required
                `;
            }
        }
        
        // Initialize flame status
        document.addEventListener('DOMContentLoaded', function() {
            checkFlameStatus();
            
            // Add flame animation to portal cards
            const cards = document.querySelectorAll('.portal-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.borderColor = 'var(--flame-orange)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.borderColor = 'rgba(255,255,255,0.2)';
                });
            });
        });
        
        // Portal access verification
        function verifyPortalAccess(portalName) {
            const flameLevel = localStorage.getItem('scrollSealLevel') || 1;
            const portalRequirements = {
                'scrollide': 1,
                'builder-dashboard': 2,
                'marketplace': 2,
                'seercircle': 4,
                'scrollcoin': 3,
                'monetization': 2
            };
            
            const requiredLevel = portalRequirements[portalName] || 1;
            
            if (flameLevel >= requiredLevel) {
                return true;
            } else {
                alert(`Flame Level ${requiredLevel} required for ${portalName}. Current level: ${flameLevel}`);
                return false;
            }
        }
        
        // Add verification to portal buttons
        document.querySelectorAll('.portal-button').forEach(button => {
            button.addEventListener('click', function(e) {
                const portalName = this.getAttribute('href').replace('/', '');
                if (!verifyPortalAccess(portalName)) {
                    e.preventDefault();
                }
            });
        });
    </script>
