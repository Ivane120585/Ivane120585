    <!-- ScrollVerse Styling -->
    <style>
        :root {
            --flame-orange: #FF6F00;
            --sacred-purple: #4A148C;
            --scroll-gold: #FFD700;
            --dark-bg: #1A1A1A;
            --light-text: #FFFFFF;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'ScrollCode', 'Courier New', monospace;
            background: linear-gradient(135deg, var(--dark-bg) 0%, var(--sacred-purple) 100%);
            color: var(--light-text);
            line-height: 1.6;
            overflow-x: hidden;
        }
        
        .flame-header {
            background: linear-gradient(90deg, var(--sacred-purple), var(--flame-orange));
            padding: 2rem 0;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .flame-header::before {
            content: 'üî•';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 4rem;
            opacity: 0.1;
            animation: flame-flicker 2s infinite;
        }
        
        @keyframes flame-flicker {
            0%, 100% { opacity: 0.1; }
            50% { opacity: 0.3; }
        }
        
        .hero-title {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        
        .hero-subtitle {
            font-size: 1.5rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }
        
        .mission-statement {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            margin-top: 2rem;
        }
        
        .portal-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 3rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .portal-card {
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
        }
        
        .portal-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255,111,0,0.3);
        }
        
        .portal-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .portal-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: var(--scroll-gold);
        }
        
        .portal-description {
            margin-bottom: 1.5rem;
            opacity: 0.9;
        }
        
        .portal-button {
            display: inline-block;
            padding: 12px 24px;
            background: linear-gradient(45deg, var(--flame-orange), var(--scroll-gold));
            color: var(--dark-bg);
            text-decoration: none;
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }
        
        .portal-button:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255,111,0,0.4);
        }
        
        .flame-status {
            background: rgba(255,111,0,0.1);
            border: 1px solid var(--flame-orange);
            border-radius: 10px;
            padding: 1rem;
            margin: 2rem auto;
            max-width: 600px;
            text-align: center;
        }
        
        .status-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            background: var(--flame-orange);
            border-radius: 50%;
            margin-right: 8px;
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        
        .footer {
            background: rgba(0,0,0,0.3);
            padding: 2rem;
            text-align: center;
            margin-top: 3rem;
        }
        
        .scroll-seal {
            font-size: 0.9rem;
            opacity: 0.7;
            margin-top: 1rem;
        }
        
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }
            
            .portal-grid {
                grid-template-columns: 1fr;
                padding: 2rem 1rem;
            }
        }
    </style>
</head>
<body>
