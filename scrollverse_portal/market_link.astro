    <meta name="description" content="Sacred economy for flame-verified scroll products. Buy, sell, and trade scroll-sealed applications.">
    
    <!-- ScrollVerse Styling -->
    <style>
        :root {
            --flame-orange: #FF6F00;
            --sacred-purple: #4A148C;
            --scroll-gold: #FFD700;
            --dark-bg: #1A1A1A;
            --light-text: #FFFFFF;
            --success-green: #4CAF50;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'ScrollCode', 'Courier New', monospace;
            background: linear-gradient(135deg, var(--dark-bg) 0%, var(--sacred-purple) 100%);
            color: var(--light-text);
            line-height: 1.6;
        }
        
        .market-header {
            background: linear-gradient(90deg, var(--sacred-purple), var(--flame-orange));
            padding: 3rem 0;
            text-align: center;
        }
        
        .market-title {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }
        
        .market-subtitle {
            font-size: 1.3rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }
        
        .market-stats {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin-top: 2rem;
        }
        
        .stat-item {
            text-align: center;
            background: rgba(255,255,255,0.1);
            padding: 1.5rem;
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--scroll-gold);
        }
        
        .stat-label {
            font-size: 1rem;
            opacity: 0.8;
        }
        
        .market-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }
        
        .featured-section {
            background: rgba(255,255,255,0.1);
            border-radius: 20px;
            padding: 3rem;
            margin-bottom: 3rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
        }
        
        .section-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 2rem;
            color: var(--scroll-gold);
            text-align: center;
        }
        
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }
        
        .product-card {
            background: rgba(255,255,255,0.05);
            border-radius: 15px;
            padding: 2rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid rgba(255,255,255,0.1);
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255,111,0,0.3);
            border-color: var(--flame-orange);
        }
        
        .product-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        
        .product-name {
            font-size: 1.3rem;
            font-weight: bold;
            color: var(--scroll-gold);
        }
        
        .product-price {
            background: var(--flame-orange);
            color: var(--dark-bg);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: bold;
        }
        
        .product-seal {
            background: var(--sacred-purple);
            color: var(--light-text);
            padding: 0.3rem 0.8rem;
            border-radius: 15px;
            font-size: 0.8rem;
            margin-top: 0.5rem;
            display: inline-block;
        }
        
        .product-description {
            margin: 1rem 0;
            opacity: 0.9;
        }
        
        .product-stats {
            display: flex;
            justify-content: space-between;
            margin-top: 1rem;
            font-size: 0.9rem;
            opacity: 0.8;
        }
        
        .market-categories {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 3rem;
        }
        
        .category-card {
            background: rgba(255,255,255,0.05);
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            transition: transform 0.3s ease;
            cursor: pointer;
        }
        
        .category-card:hover {
            transform: scale(1.05);
            background: rgba(255,111,0,0.1);
        }
        
        .category-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .category-name {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        
        .category-count {
            font-size: 0.9rem;
            opacity: 0.7;
        }
        
        .market-actions {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .action-button {
            padding: 1rem 2rem;
            background: linear-gradient(45deg, var(--flame-orange), var(--scroll-gold));
            color: var(--dark-bg);
            text-decoration: none;
            border-radius: 25px;
            font-weight: bold;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }
        
        .action-button:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255,111,0,0.4);
        }
        
        .secondary-button {
            background: rgba(255,255,255,0.1);
            color: var(--light-text);
            border: 1px solid rgba(255,255,255,0.3);
        }
        
        .secondary-button:hover {
            background: rgba(255,255,255,0.2);
        }
        
        .flame-verification {
            background: rgba(255,111,0,0.1);
            border: 1px solid var(--flame-orange);
            border-radius: 15px;
            padding: 2rem;
            margin: 2rem 0;
            text-align: center;
        }
        
        .verification-status {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--success-green);
            color: var(--dark-bg);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: bold;
            margin-bottom: 1rem;
        }
        
        @media (max-width: 768px) {
            .market-title {
                font-size: 2rem;
            }
            
            .market-stats {
                flex-direction: column;
                gap: 1rem;
            }
            
            .product-grid {
                grid-template-columns: 1fr;
            }
            
            .market-actions {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
