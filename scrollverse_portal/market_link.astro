    <!-- Market Scripts -->
    <script>
        // Market data loading
        function loadMarketData() {
            const marketData = {
                totalProducts: 1250,
                totalBuilders: 500,
                totalVolume: 2500000,
                flameVerified: 98.5
            };
            
            // Update market stats
            updateMarketStats(marketData);
        }
        
        function updateMarketStats(data) {
            // Update statistics display
            const statNumbers = document.querySelectorAll('.stat-number');
            if (statNumbers.length >= 4) {
                statNumbers[0].textContent = data.totalProducts + '+';
                statNumbers[1].textContent = data.totalBuilders + '+';
                statNumbers[2].textContent = '$' + (data.totalVolume / 1000000).toFixed(1) + 'M+';
                statNumbers[3].textContent = data.flameVerified + '%';
            }
        }
        
        // Initialize marketplace
        document.addEventListener('DOMContentLoaded', function() {
            loadMarketData();
            
            // Add hover effects to product cards
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.borderColor = 'var(--flame-orange)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.borderColor = 'rgba(255,255,255,0.1)';
                });
            });
            
            // Add click handlers to category cards
            const categoryCards = document.querySelectorAll('.category-card');
            categoryCards.forEach(card => {
                card.addEventListener('click', function() {
                    const categoryName = this.querySelector('.category-name').textContent;
                    // Navigate to category page
                    window.location.href = `/marketplace/category/${categoryName.toLowerCase()}`;
                });
            });
        });
        
        // Product purchase simulation
        function purchaseProduct(productName, price) {
            // Check flame level requirement
            const userFlameLevel = localStorage.getItem('scrollSealLevel') || 1;
            const requiredLevel = 3; // Minimum level for purchases
            
            if (userFlameLevel >= requiredLevel) {
                // Simulate purchase
                alert(`üî• Flame-verified purchase: ${productName} for $${price}`);
                // Redirect to checkout
                window.location.href = `/marketplace/checkout?product=${encodeURIComponent(productName)}&price=${price}`;
            } else {
                alert(`Flame Level ${requiredLevel} required for purchases. Current level: ${userFlameLevel}`);
            }
        }
        
        // Add purchase buttons to product cards
        document.querySelectorAll('.product-card').forEach(card => {
            const productName = card.querySelector('.product-name').textContent;
            const price = card.querySelector('.product-price').textContent.replace('$', '');
            
            const purchaseButton = document.createElement('button');
            purchaseButton.textContent = 'Purchase';
            purchaseButton.className = 'action-button';
            purchaseButton.style.marginTop = '1rem';
            purchaseButton.style.width = '100%';
            
            purchaseButton.addEventListener('click', () => {
                purchaseProduct(productName, price);
            });
            
            card.appendChild(purchaseButton);
        });
    </script>
