    <!-- Storefront Scripts -->
    <script>
        // Load storefront data
        function loadStorefrontData() {
            const storefrontData = {
                builderId: 'scrollbuilder_2471',
                builderName: 'ScrollBuilder #2471',
                flameLevel: 4,
                sealLevel: 4,
                totalProducts: 12,
                totalExecutions: 1247,
                totalRevenue: 2450,
                averageRating: 4.8
            };
            
            updateStorefront(storefrontData);
        }
        
        function updateStorefront(data) {
            // Update builder stats
            const statValues = document.querySelectorAll('.stat-value');
            if (statValues.length >= 4) {
                statValues[0].textContent = data.totalProducts;
                statValues[1].textContent = data.totalExecutions.toLocaleString();
                statValues[2].textContent = '$' + data.totalRevenue.toLocaleString();
                statValues[3].textContent = data.averageRating;
            }
        }
        
        // Initialize storefront
        document.addEventListener('DOMContentLoaded', function() {
            loadStorefrontData();
            
            // Add hover effects to product cards
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.borderColor = 'var(--flame-orange)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.borderColor = 'rgba(255,255,255,0.2)';
                });
            });
            
            // Add click handlers to donation options
            const donationOptions = document.querySelectorAll('.donation-option');
            donationOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const amount = this.querySelector('.donation-amount').textContent;
                    const label = this.querySelector('.donation-label').textContent;
                    
                    // Simulate donation
                    alert(`🔥 Sacred donation: $${amount} as ${label}`);
                    // Redirect to donation page
                    window.location.href = `/donate?amount=${amount.replace('$', '')}&tier=${label.toLowerCase().replace(' ', '_')}`;
                });
            });
        });
        
        // Product purchase simulation
        function purchaseProduct(productName, price) {
            // Check flame level requirement
            const userFlameLevel = localStorage.getItem('scrollSealLevel') || 1;
            const requiredLevel = 3; // Minimum level for purchases
            
            if (userFlameLevel >= requiredLevel) {
                // Simulate purchase
                alert(`🔥 Flame-verified purchase: ${productName} for $${price}`);
                // Redirect to checkout
                window.location.href = `/checkout?product=${encodeURIComponent(productName)}&price=${price}`;
            } else {
                alert(`Flame Level ${requiredLevel} required for purchases. Current level: ${userFlameLevel}`);
            }
        }
        
        // Add purchase handlers to product buttons
        document.querySelectorAll('.primary-button').forEach(button => {
            if (button.textContent === 'Purchase') {
                const productCard = button.closest('.product-card');
                const productName = productCard.querySelector('.product-name').textContent;
                const price = productCard.querySelector('.product-price').textContent.replace('$', '');
                
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    purchaseProduct(productName, price);
                });
            }
        });
    </script>
